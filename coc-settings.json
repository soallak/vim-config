{
    "languageserver": {
        "hdlChecker": {
            "command": "hdl_checker",
            "args": [
                "--lsp"
            ],
            "filetypes": [
                "vhdl",
                "verilog",
                "systemverilog"
            ]
        }
    },

  "yaml": { 
    "schemas": {
      "kubernetes": "/*.yaml"
    }
  },

  "clangd": {
    "enabled": true,
    "arguments": ["--clang-tidy", "--fallback-style=Google", "--enable-config"],
    "disableDiagnostics": false,
    "disableSnippetCompletion": false,
    "compilationDatabasePath": "",
    "fallbackFlags":[],
    "semanticHighlighting": false,
    "serverCompletionRanking": true,
    "path": "/usr/bin/clangd"
  }
}
