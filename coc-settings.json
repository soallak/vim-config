{
    "languageserver": {
        "hdlChecker": {
            "command": "hdl_checker",
            "args": [
                "--lsp"
            ],
            "filetypes": [
                "vhdl",
                "verilog",
                "systemverilog"
            ]
        }
    },

	"python" : {
		"setInterpreter" : "/usr/bin/python3",
		"jediEnabled" : "true",

		"analysis" : {
			"diagnosticEnabled" : "true",
			"logLevel" : "Warning"

		},

		"autocomplete" : {
			"showAdvancedMembers" : "true"
		},

		"formating" : {
			"provider": "flake8"

		},

		"linting" : {
			"enabled" : "true",
			"flake8Enabled" : "true",
			"linkOnSave" : "true"
		}
	},
	"yaml.schemas": {
      "kubernetes": "/*.yaml"
	}
}
