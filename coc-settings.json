{
    "languageserver": {
        "hdlChecker": {
            "command": "hdl_checker",
            "args": [
                "--lsp"
            ],
            "filetypes": [
                "vhdl",
                "verilog",
                "systemverilog"
            ]
        }
    },

	"yaml": { 
		"schemas": {
			"kubernetes": "/*.yaml"
		}
	},

	"clangd": {
		"enabled": true,
		"arguments": [],
		"disableDiagnostics": false,
		"disableSnippetCompletion": false,
		"compilationDatabasePath": "",
		"fallbackFlags":[],
		"semanticHighlighting": true,
		"serverCompletionRanking": true,
		"path": "/usr/bin/clangd"
	}
}
